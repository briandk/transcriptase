{
  "name": "transcriptase",
  "productName": "Transcriptase",
  "version": "0.1.0",
  "description": "A Github Electron app for creating and editing Transdown files (briandk.com/transdown)",
  "main": "main.js",
  "author": { "name": "Brian Danielak"
            , "email": "briandaniela.k+github@gmail.com"
            , "url" : "http://briandk.com/"
  },
  "scripts": {
    "test": "node_modules/.bin/jasmine",
    "start": "node_modules/.bin/electron .",
    "distribute": "make distribution",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "com.episteme.transcriptase",
    "dmg": {
      "title": "Transcriptase"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "linux": {
      "target": ["deb"]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/briandk/transcriptase.git"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/briandk/transcriptase/issues"
  },
  "homepage": "https://github.com/briandk/transcriptase#readme",
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.5",
    "fs-plus": "^2.9.3",
    "highlight.js": "^9.8",
    "jasmine": "2.5.2",
    "quill": "^1.1",
    "quill-delta": "^3.4.3",
    "video.js": "^5.16.0"
  },
  "devDependencies": {
    "7zip-bin-mac": "^1.0.1",
    "chai": "^3.5.0",
    "devtron": "^1.4.0",
    "electron": "^1.4.15",
    "electron-builder": "^14.5.3",
    "electron-builder-squirrel-windows": "13",
    "electron-packager": "^8.4.0",
    "electron-rebuild": "^1.5.7",
    "less": "^2.7.2",
    "mocha": "^3.2.0",
    "standard": "^8.5.0"
  }
}
