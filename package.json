{
  "name": "Transcriptase",
  "version": "0.1.0",
  "description": "A Github Electron app for creating and editing Transdown files (briandk.com/transdown)",
  "main": "main.js",
  "scripts": {
    "test": "mocha tests",
    "start": "electron .",
    "distribute": "make distribution"
  },
  "build": {
    "pkg": {
      "appID": "com.episteme.transcriptase",
      "identity": "CSC_NAME",
      "path": "/Applications",
      "target": "pkg"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/briandk/transcriptase.git"
  },
  "author": "Brian A. Danielak",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/briandk/transcriptase/issues"
  },
  "homepage": "https://github.com/briandk/transcriptase#readme",
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.5",
    "fs-plus": "^2.9.3",
    "highlight.js": "^9.8",
    "quill": "^1.1",
    "video.js": "^5.11.9"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "devtron": "^1.4.0",
    "electron": "^1.4.10",
    "electron-builder": "^11.5.1",
    "electron-packager": "^8.4.0",
    "jasmine": "^2.5.3",
    "less": "^2.7.2",
    "mocha": "^3.2.0",
    "standard": "^8.5.0"
  }
}
