{
  "name": "transcriptase",
  "productName": "Transcriptase",
  "version": "0.3.1",
  "description": "A Github Electron app for creating and editing Transdown files (briandk.com/transdown)",
  "main": "built/index.js",
  "author": {
    "name": "Brian Danielak",
    "email": "briandaniela.k+github@gmail.com",
    "url": "http://briandk.com/transcriptase"
  },
  "scripts": {
    "auto-format": "yarn run prettier --write '**/*.ts' '**/*.tsx' '**/**.js' '**/**.json' '**/**.md'",
    "dev": "rm -rf dist & webpack --mode=development",
    "watch": "rm -rf dist & webpack --watch --mode=development",
    "lint": "tslint --project . --config ./tslint.json",
    "compile-typescript": "yarn run tsc --project .",
    "test": "yarn compile-typescript && jasmine",
    "start": "yarn compile-typescript && yarn run dev",
    "build": "electron-builder",
    "build_and_publish": "yarn compile-typescript && yarn build --publish=onTagOrDraft"
  },
  "electronWebpack": {
    "commonSourceDirectory": "src/common",
    "title": true,
    "main": {
      "sourceDirectory": "src/main"
    },
    "renderer": {
      "sourceDirectory": "src/renderer"
    },
    "whiteListedModules": [
      "quill",
      "source-map-support"
    ]
  },
  "build": {
    "appId": "com.episteme.transcriptase",
    "files": [
      "built/**"
    ],
    "dmg": {
      "title": "Transcriptase"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "zip"
      ],
      "description": "",
      "icon": "build/icon.iconset"
    },
    "mac": {
      "target": [
        "dir"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/briandk/transcriptase.git"
  },
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/briandk/transcriptase/issues"
  },
  "homepage": "https://github.com/briandk/transcriptase#readme",
  "dependencies": {
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "luxon": "^1.0.0",
    "moment": "^2.22.0",
    "quill": "^1.3.5",
    "uikit": "^3.0.0-beta.39",
    "video.js": "^6.2.4"
  },
  "devDependencies": {
    "7zip-bin": "^3.0.0",
    "@types/luxon": "^0.5.0",
    "@types/node": "^9.6.1",
    "@types/quill": "^1.3.6",
    "@types/webpack": "^4.1.3",
    "awesome-typescript-loader": "^5.0.0",
    "devtron": "^1",
    "electron": "2.0.0-beta.6",
    "electron-builder": "^20.8.1",
    "html-webpack-plugin": "^3.2.0",
    "inline-source-map": "^0.6.2",
    "jasmine": "^3.0.0",
    "prettier": "^1.10.2",
    "source-map": "^0.7.0",
    "source-map-loader": "^0.2.3",
    "spectron": "^3.7.2",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.6.0",
    "typescript": "^2.7.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  },
  "browser": {
    "fs": false
  }
}
