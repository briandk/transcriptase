{
  "name": "transcriptase",
  "productName": "Transcriptase",
  "version": "0.3.1",
  "description": "A Github Electron app for creating and editing Transdown files (briandk.com/transdown)",
  "main": "built/index.js",
  "author": {
    "name": "Brian Danielak",
    "email": "briandaniela.k+github@gmail.com",
    "url": "http://briandk.com/transcriptase"
  },
  "scripts": {
    "dev": "electron-webpack dev",
    "lint": "tslint --project . --config ./tslint.json",
    "compile-typescript": "tsc && cp src/index.html built/index.html && cp -r src/css built/css",
    "test": "yarn compile-typescript && jasmine",
    "start": "yarn compile-typescript && dev",
    "build": "electron-builder",
    "build:webpack": "webpack --config webpack.config.js --display-error-details",
    "build_and_publish": "yarn compile-typescript && yarn build --publish=onTagOrDraft"
  },
  "electronWebpack": {
    "main": {
      "sourceDirectory": "src"
    },
    "renderer": {
      "sourceDirectory": "src"
    }
  },
  "build": {
    "appId": "com.episteme.transcriptase",
    "dmg": {
      "title": "Transcriptase"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "zip"
      ],
      "description": "",
      "icon": "build/icon.iconset"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/briandk/transcriptase.git"
  },
  "prettier": {
    "trailingComma": "all",
    "parser": "typescript"
  },
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/briandk/transcriptase/issues"
  },
  "homepage": "https://github.com/briandk/transcriptase#readme",
  "dependencies": {
    "@types/quill": "^1.3.5",
    "electron-localshortcut": "^2.0.2",
    "electron-updater": "^2.17.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "moment": "^2.18.1",
    "moment-duration-format": "^2.1.0",
    "quill": "^1.3.0",
    "quill-delta": "^3.5",
    "uikit": "^3.0.0-beta.27",
    "video.js": "^6.2.4"
  },
  "devDependencies": {
    "7zip-bin": "^2.0",
    "@types/fs-plus": "^3.0.0",
    "devtron": "^1",
    "electron": "1.7.10",
    "electron-builder": "^19.27.3",
    "electron-webpack": "^1.11.0",
    "electron-webpack-ts": "^1.2.0",
    "inline-source-map": "^0.6.2",
    "jasmine": "^2.8.0",
    "prettier": "1.9.2",
    "spectron": "^3.7.2",
    "standard": "^10.0.3",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0"
  }
}
