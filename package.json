{
  "name": "transcriptase",
  "productName": "Transcriptase",
  "version": "0.3.1",
  "description": "A Github Electron app for creating and editing Transdown files (briandk.com/transdown)",
  "main": "built/main/index.js",
  "author": {
    "name": "Brian Danielak",
    "email": "briandaniela.k+github@gmail.com",
    "url": "http://briandk.com/transcriptase"
  },
  "scripts": {
    "dev": "electron built/main",
    "lint": "tslint --project . --config ./tslint.json",
    "compile-typescript": "yarn run tsc --project .",
    "test": "yarn compile-typescript && jasmine",
    "start": "yarn compile-typescript && yarn run dev",
    "build": "electron-builder",
    "build_and_publish": "yarn compile-typescript && yarn build --publish=onTagOrDraft"
  },
  "electronWebpack": {
    "commonSourceDirectory": "src/common",
    "title": true,
    "main": {
      "sourceDirectory": "src/main"
    },
    "renderer": {
      "sourceDirectory": "src/renderer"
    }
  },
  "build": {
    "appId": "com.episteme.transcriptase",
    "dmg": {
      "title": "Transcriptase"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "zip"
      ],
      "description": "",
      "icon": "build/icon.iconset"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/briandk/transcriptase.git"
  },
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/briandk/transcriptase/issues"
  },
  "homepage": "https://github.com/briandk/transcriptase#readme",
  "dependencies": {
    "@types/quill": "^1.3.6",
    "electron-updater": "^2.20.1",
    "font-awesome": "^4.7.0",
    "fs-plus": "^3.0.2",
    "jquery": "^3.2.1",
    "moment": "^2.20.1",
    "moment-duration-format": "^2.1.0",
    "quill": "^1.3.5",
    "quill-delta": "^3.5",
    "uikit": "^3.0.0-beta.39",
    "video.js": "^6.2.4"
  },
  "devDependencies": {
    "7zip-bin": "^3.0.0",
    "@types/fs-plus": "^3.0.0",
    "@types/moment-duration-format": "^2.2.0",
    "@types/node": "^9.4.0",
    "@types/video.js": "^6.2.3",
    "devtron": "^1",
    "electron": "1.7.12",
    "electron-builder": "^19.27.3",
    "electron-webpack-ts": "^1.2.0",
    "inline-source-map": "^0.6.2",
    "jasmine": "^2.8.0",
    "prettier": "^1.10.2",
    "source-map": "^0.7.0",
    "spectron": "^3.7.2",
    "standard": "^10.0.3",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0"
  }
}
