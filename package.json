{
  "name": "transcriptase",
  "productName": "Transcriptase",
  "version": "0.3.1",
  "description": "A Github Electron app for creating and editing Transdown files (briandk.com/transdown)",
  "main": "main.js",
  "author": {
    "name": "Brian Danielak",
    "email": "briandaniela.k+github@gmail.com",
    "url": "http://briandk.com/transcriptase"
  },
  "scripts": {
    "test": "jasmine",
    "start": "node_modules/.bin/electron .",
    "pack": "build --dir",
    "build": "electron-builder",
    "build_and_publish": "electron-builder --publish=onTagOrDraft"
  },
  "build": {
    "appId": "com.episteme.transcriptase",
    "dmg": {
      "title": "Transcriptase"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "zip"
      ],
      "description": "",
      "icon": "build/icon.iconset"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/briandk/transcriptase.git"
  },
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/briandk/transcriptase/issues"
  },
  "homepage": "https://github.com/briandk/transcriptase#readme",
  "dependencies": {
    "electron-localshortcut": "^2.0.2",
    "font-awesome": "^4.7.0",
    "fs-plus": "^3.0.0",
    "jquery": "^3.2.1",
    "moment": "^2.18.1",
    "moment-duration-format": "^1.3.0",
    "quill": "^1.3.0",
    "quill-delta": "^3.5",
    "uikit": "^3.0.0-beta.27",
    "video.js": "^6.2.4"
  },
  "devDependencies": {
    "7zip-bin": "^2.0",
    "devtron": "^1",
    "electron": "1.7.9",
    "electron-builder": "^19.27.3",
    "jasmine": "^2.8.0",
    "spectron": "^3.7.2",
    "standard": "^10.0.3"
  }
}
