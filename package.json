{
  "name": "transcriptase",
  "productName": "Transcriptase",
  "main": "out/main.js",
  "version": "1.4.0",
  "description": "A Github Electron app for creating and editing Transdown files (briandk.com/transdown)",
  "license": "AGPL-3.0",
  "private": true,
  "author": {
    "name": "Brian A. Danielak",
    "email": "briandaniela.k+github@gmail.com",
    "url": "http://briandk.com/transcriptase"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/briandk/transcriptase.git"
  },
  "homepage": "http://transcriptase.tech",
  "build": {
    "appId": "com.episteme.transcriptase",
    "files": [
      "!src",
      "!docs",
      "!tsconfig.json",
      "!fuse.js",
      "!dev-app-update.yml",
      "!README.md",
      "!LICENSE",
      "!globals.d.ts"
    ],
    "linux": {
      "target": [
        "snap"
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "mas"
      ]
    },
    "mas": {
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist"
    },
    "publish": {
      "owner": "briandk",
      "provider": "github",
      "repo": "transcriptase"
    },
    "win": {
      "target": [
        "appx"
      ],
      "icon": "build/icon.ico"
    },
    "appx": {
      "publisher": "CN=B82FCD77-DFAB-4B93-A7CA-DB2B3DD6E16D",
      "identityName": "10311BrianDanielak.Transcriptase",
      "publisherDisplayName": "Brian Danielak",
      "applicationId": "BrianDanielak.Transcriptase"
    }
  },
  "scripts": {
    "clean": "rm -rf .fusebox out dist coverage",
    "compile": "electron-webpack",
    "coverage": "yarn test --coverage --no-cache",
    "coverage:upload": "cat ./coverage/lcov.info | coveralls",
    "dist": "yarn compile && electron-builder",
    "dist:all": "electron-builder --mac --win --linux --ia32 --x64",
    "draft": "electron-builder -p always --draft --mac --win --linux --ia32 --x64",
    "format": "prettier --write **/*.ts && tslint -p . --fix",
    "lint": "eslint 'src/**'",
    "pack": "electron-builder --dir",
    "postinstall": "yarn electron-builder install-app-deps",
    "publish-binaries-to-github": "yarn dist --publish onTagOrDraft",
    "sanity": "npm-run-all clean typecheck lint test clean compile clean",
    "start": "electron-webpack dev",
    "test": "jest",
    "typecheck": "tsc --noEmit --pretty"
  },
  "dependencies": {
    "electron-devtools-installer": "^2.2.4",
    "electron-is-dev": "^0.3.0",
    "electron-log": "2.2.17",
    "electron-window-state-manager": "^0.3.2",
    "emotion": "9.2.12",
    "glamor": "^2.20.40",
    "glamorous": "^4.13.1",
    "immutable": "^4.0.0-rc.12",
    "is-hotkey": "0.1.4",
    "luxon": "1.4.5",
    "merge": "^1.2.1",
    "moment": "^2.22.2",
    "mousetrap": "^1.6.1",
    "prismjs": "^1.15.0",
    "react": "16.6.0",
    "react-dom": "16.6.0",
    "react-emotion": "9.2.12",
    "react-split-pane": "https://github.com/briandk/react-split-pane.git",
    "slate": "0.47.4",
    "slate-plain-serializer": "0.7.6",
    "slate-react": "0.22.4",
    "slate-trailing-block": "^0.5.0",
    "source-map-support": "0.5.9",
    "uikit": "3.0.0-rc.12"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.0.3",
    "@types/electron-is-dev": "^0.3.0",
    "@types/inline-style-prefixer": "^5.0.0",
    "@types/is-hotkey": "0.1.1",
    "@types/jest": "24.0.15",
    "@types/luxon": "1.4.0",
    "@types/mousetrap": "^1.6.0",
    "@types/prismjs": "1.9.0",
    "@types/react-dom": "16.0.9",
    "@types/react-test-renderer": "16.0.3",
    "@types/slate": "0.44.11",
    "@types/slate-plain-serializer": "0.6.1",
    "@types/slate-react": "0.22.1",
    "@types/uikit": "^2.27.6",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "babel-core": "^6.26.3",
    "babel-jest": "24.8.0",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "5.0.5",
    "electron-builder": "20.38.5",
    "electron-webpack": "2.6.2",
    "electron-webpack-ts": "3.1.1",
    "electron-windows-store": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "24.8.0",
    "jest-expect-contain-deep": "^1.0.1",
    "lint-staged": "7.2.2",
    "npm-run-all": "^4.1.2",
    "prettier": "1.16.4",
    "react-powerplug": "^1.0.0-rc.1",
    "react-test-renderer": "16.6.0",
    "ts-jest": "24.0.0",
    "ts-loader": "5.4.3",
    "ts-node": "8.1.0",
    "tslint": "^5.16.0",
    "typescript": "3.4.4",
    "webpack": "4.29.6"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "setupFiles": [
      "./test/setup.ts"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/mock-file.ts",
      "\\.(css|less)$": "<rootDir>/test/mock-style.ts"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "./node_modules",
      "./out",
      "./build",
      "./dist",
      "./test",
      "./docs"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": false
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint && yarn run typecheck && yarn test"
    }
  }
}
