{
  "name": "transcriptase",
  "productName": "Transcriptase",
  "version": "0.2.0",
  "description": "A Github Electron app for creating and editing Transdown files (briandk.com/transdown)",
  "main": "main.js",
  "author": {
    "name": "Brian Danielak",
    "email": "briandaniela.k+github@gmail.com",
    "url": "http://briandk.com/"
  },
  "scripts": {
    "test": "jasmine",
    "start": "node_modules/.bin/electron .",
    "distribute": "make distribution",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "com.episteme.transcriptase",
    "dmg": {
      "title": "Transcriptase"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ],
      "description": "",
      "icon": "build/icon.iconset"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/briandk/transcriptase.git"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/briandk/transcriptase/issues"
  },
  "homepage": "https://github.com/briandk/transcriptase#readme",
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.5",
    "electron": "^1.6.11",
    "font-awesome": "^4.7.0",
    "fs-plus": "^3.0.0",
    "moment": "^2.18.1",
    "moment-duration-format": "^1.3.0",
    "quill": "^1.3.0",
    "quill-delta": "^3.5",
    "uikit": "^3.0.0-beta.27",
    "video.js": "^6.2.4"
  },
  "devDependencies": {
    "7zip-bin": "^2.0",
    "chai": "^4.1.0",
    "devtron": "^1",
    "electron-builder": "^19.17.0",
    "electron-packager": "^8.7.2",
    "jasmine": "^2.7.0",
    "mocha": "^3.2.0",
    "standard": "^10.0.2"
  }
